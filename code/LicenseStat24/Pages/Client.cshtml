        var donutChartCanvas = $('#dealsSells').get(0).getContext('2d')
        var donutData = {
            labels: ['Продажи', 'Продления'],
            datasets: [
                {
                    data: [@Html.Raw(cliCalc.salesCount), @Html.Raw(cliCalc.renewsCount)],
                    backgroundColor: ['#87CEEB', '#FFA07A'],
                }
            ]
        }


        var donutOptions = {
            maintainAspectRatio: false,
            responsive: true,
            legend: {
                labels: {
